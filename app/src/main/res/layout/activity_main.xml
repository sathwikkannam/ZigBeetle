<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/black"
    tools:context=".activity.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="15dp"
        android:layout_above="@+id/Navigation"
        android:background="@drawable/curved_squared">

        <TextView
            android:layout_width="wrap_content"
            android:paddingStart="15dp"
            android:layout_height="wrap_content"
            android:text="@string/connectioned"
            android:textSize="20sp"
            android:id="@+id/ConnectedTO"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black"
            tools:ignore="RtlSymmetry" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:id="@+id/Navigation"
        android:background="@color/black"
        android:gravity="center">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/toHome"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/home"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_gravity="center"
                android:background="@drawable/curved_squared"
                android:backgroundTint="@color/platinum"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:contentDescription="@string/todo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home"
                android:layout_gravity="center"
                android:textColor="@color/platinum"
                android:fontFamily="sans-serif-medium"
                android:textSize="15sp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/toBluetooth"
            android:layout_marginStart="70dp"
            tools:ignore="UseCompoundDrawables">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/platinum"
                android:src="@drawable/bluetooth"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_gravity="center"
                app:tint="@color/platinum"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:contentDescription="@string/todo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bluetooth"
                android:fontFamily="sans-serif-medium"
                android:layout_gravity="center"
                android:textColor="@color/platinum"
                android:textSize="15sp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="70dp"
            android:id="@+id/toSettings"
            tools:ignore="UseCompoundDrawables">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/settings"
                android:paddingTop="2dp"
                android:backgroundTint="@color/platinum"
                android:paddingBottom="2dp"
                android:layout_gravity="center"
                app:tint="@color/platinum"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:contentDescription="@string/todo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings1"
                android:fontFamily="sans-serif-medium"
                android:layout_gravity="center"
                android:textColor="@color/platinum"
                android:textSize="15sp"/>


        </LinearLayout>



    </LinearLayout>

</RelativeLayout>